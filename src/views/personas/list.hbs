<div class="container">
    <div class="row mt-5">
        {{#if personas}}
        {{#each}}
        <div class="col-md-3">
            <table class="text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Acciones</th>

                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">registro de personas</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{#/each}}
        {{else}}
            <div class="card text-center mx-auto" style="width:350px">
                <div class="card-header">
                    <h3> Debes crear una nueva persona </h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar una persona en la aplicacion</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>